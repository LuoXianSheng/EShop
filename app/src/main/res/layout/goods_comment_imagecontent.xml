<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="13sp"
        android:textColor="#FF232222"
        android:id="@+id/goods_comnet_contentuser"
        />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论:"
        android:textSize="13sp"
        android:textColor="#FF232222"
        android:id="@+id/goods_contentcommnet"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间:"
        android:textSize="13sp"
        android:textColor="#FF232222"
        android:id="@+id/goods_commnet_contentdate"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/goods_comment_contentimage1"
            android:layout_weight="1"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/goods_comment_contentimage2"
            android:layout_weight="1"/>
        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/goods_comment_contentimage3"/>
        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/goods_comment_contentimage4"/>
        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/goods_comment_contentimage5"/>
    </LinearLayout>
</LinearLayout>