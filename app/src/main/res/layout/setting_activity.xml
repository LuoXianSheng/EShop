<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    tools:context="com.newer.eshop.account.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >



        <ImageButton

            android:id="@+id/setting_btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/regist_top_back"
            android:gravity="center"

            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/t_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="系统设置"

            android:textSize="20dp" />


    </LinearLayout>


、
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/setting_clean_im"
        android:id="@+id/tv_phone"
        android:textSize="25dp"
        android:gravity="center"
        android:text="清除缓存"
        />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/setting_checkupdate_im"
        android:textSize="25dp"
        android:id="@+id/tv_address"
        android:gravity="center"
        android:text="检查更新"
        />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/setting_about_us"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tv_report"
        android:text="关于我们"
        />



</LinearLayout>
