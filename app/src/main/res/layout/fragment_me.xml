<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">





    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/me_top_im"
        android:layout_height="220dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/me_top_setting"
                android:src="@drawable/me_top_setting"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/me_top_login"
                android:layout_marginLeft="255dp"
                android:src="@drawable/me_top_login"
                android:background="@android:color/transparent"
                />



        </LinearLayout>

        <Button
            android:text="登录/注册"
            android:id="@+id/login"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="92dp"
            android:layout_marginEnd="92dp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="查看一件商品"
            android:layout_marginLeft="10dp"
            android:id="@+id/goods"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>





    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/me_name_im"
        android:id="@+id/tv_username"
        android:textSize="25dp"
        android:gravity="center"
        android:text="用户名字显示"
        />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/me_address_im"
        android:id="@+id/tv_phone"
        android:textSize="25dp"
        android:gravity="center"
        android:text="用户的电话显示"
        />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/me_phone_im"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tv_address"
        android:text="用户的地址显示"
        />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:drawableLeft="@drawable/me_report_im"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tv_report"
        android:text="用户反馈"
        />


    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="注销登录"
        />


</LinearLayout>